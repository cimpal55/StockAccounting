@model EmployeeDataViewModel
@{
    ViewData["Title"] = "EmployeeData";
}
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.css" />
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.18/css/bootstrap-select.min.css" />

<div class="container">
    <alerts></alerts>
    <div class="row pb-3">
        <div class="col-xs-12">
            <div class="dropdown show">
                <a aria-pressed="true" class="dropdown-toggle"
                   role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="green" class="bi bi-file-earmark-excel" viewBox="0 0 16 16">
                    <path d="M5.884 6.68a.5.5 0 1 0-.768.64L7.349 10l-2.233 2.68a.5.5 0 0 0 .768.64L8 10.781l2.116 2.54a.5.5 0 0 0 .768-.641L8.651 10l2.233-2.68a.5.5 0 0 0-.768-.64L8 9.219l-2.116-2.54z" />
                    <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5v2z" />
                    </svg>
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item employeeExcel" href="#" value="@FileExport.Taken">Parts taken by the employee</a>
                    <a class="dropdown-item employeeExcel" href="#" value="@FileExport.Returned">Parts returned by the employee</a>
                    <a class="dropdown-item employeeExcel" href="#" value="@FileExport.Default">Parts currently remaining with the employee</a>
                </div>
            </div>
        </div>
        <div class="col"></div>
        <div class="col">
            <div class="input-group">
                <input type="text" name="searchEmployeeData" id="searchEmployeeDataId" class="form-control" placeholder="Search...">
                <button type="button" class="btn bg-transparent" style="margin-left: -40px; z-index: 100;" id="btnEmployeeDataClearSearch">
                    <i class="fa fa-times"></i>
                </button>
                <a class="btn btn-primary search-link" style="color: #fff;">Search</a>
            </div>
        </div>
    </div>

    <div class="fixed-table-container" id="divTable" style="display: none;">
        <table class="table" id="employeeTable">
            <thead>
            <tr>
                <th><input name="checkbox" type="checkbox" id="checkBoxAll" class="custom-checkbox"/></th>
                <th>Name</th>
                <th>Surname</th>
                <th>Code</th>
                <th>Email</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @{
                System.Diagnostics.Debug.Assert(Model != null, nameof(Model) + " != null");
                System.Diagnostics.Debug.Assert(Model.EmployeeModel != null, "Model.EmployeeModel != null");
            }

            @foreach (var item in Model.EmployeeModel)
            {
                <tr id="data_@item.Id">
                    <td><input type="checkbox" value="@item.Id" class="custom-checkbox chkCheckBoxId" id="checkBox"/></td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Code</td>
                    <td>@item.Email</td>
                    <td align="right">
                        <a class="btn btn-outline-primary" 
                           role="button" 
                           aria-pressed="true"
                           asp-controller="EmployeeData" 
                           asp-action="Details" 
                           asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
