@model StockDataViewModel
@{
    ViewData["Title"] = "EmployeeDetails";
}

<div class="container">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" aria-current="page"><a asp-controller="EmployeeData" asp-action="List">Employees</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.StockDataModel.Select(x => x.Employee).FirstOrDefault()</li>
            </ol>
        </nav>
    </div>

    <div class="fixed-table-container" id="employeeDetailsDiv" style="display: none;">
        <table class="table" id="employeeDetailsTable">
            <thead>
            <tr>
                <th>Stock name</th>
                <th>ItemNumber</th>
                <th>PluCode</th>
                <th>Barcode</th>
                <th>Quantity</th>
            </tr>
            </thead>
            <tbody>
            @{
                System.Diagnostics.Debug.Assert(Model != null, nameof(Model) + " != null");
                System.Diagnostics.Debug.Assert(Model.StockDataModel != null, "Model.StockDataModel != null");
            }
                @foreach (var item in Model.StockDataModel)
            {
                <tr id="data_@item.Id">
                    <td>@item.Name</td>
                    <td>@item.ItemNumber</td>
                    <td>@item.PluCode</td>
                    <td>@item.Barcode</td>
                    <td>@item.Quantity</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="row justify-content-end pr-3">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (Model.EndPage > 9)
                {
                    <li class="page-item"><a class="page-link search-link" asp-controller="EmployeeData" asp-action="Details" asp-employeeId="@Model.StockDataModel.Select(x => x.EmployeeId)" asp-route-pageId="1">1</a></li>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                }
                @for (var i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    var activePage = (Model.PageIndex == i) ? "active" : "";
                    <li class="page-item @activePage"><a class="page-link search-link" asp-controller="EmployeeData" asp-employeeId="@Model.StockDataModel.Select(x => x.EmployeeId)" asp-action="Details" asp-route-pageId="@i">@i</a></li>

                }
                @if (Model.EndPage >= 9 && Model.EndPage < Model.TotalPages)
                {
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                    <li class="page-item"><a class="page-link search-link" asp-controller="EmployeeData" asp-employeeId="@Model.StockDataModel.Select(x => x.EmployeeId)" asp-action="Details" asp-route-pageId="@Model.TotalPages">@Model.TotalPages</a></li>
                }
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script src="~/js/employeeDataDetails.js" asp-append-version="true"></script>
}