@using System.Globalization
@model StockEmployeesViewModel
@{
    ViewData["Title"] = "StockLeftQuantity";
    IFormatProvider theCultureInfo = new System.Globalization.CultureInfo("lv", true);
}

<div class="container">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" aria-current="page"><a asp-controller="StockData" asp-action="List">Stocks</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.StockEmployeesModel.Select(x => x.StockName).FirstOrDefault()</li>
            </ol>
        </nav>
    </div>

    <div class="fixed-table-container">
        <table class="table" id="stockLeftQuantityTable">
            <thead>
            <tr>
                <th>Employee</th>
                <th>Quantity</th>
            </tr>
            </thead>
            <tbody>
            @{
                System.Diagnostics.Debug.Assert(Model != null, nameof(Model) + " != null");
                System.Diagnostics.Debug.Assert(Model.StockEmployeesModel != null, "Model.StockEmployeesModel != null");
            }
            @foreach (var item in Model.StockEmployeesModel)
            {
                if(item.Quantity != 0)
                {
                    <tr id="data_@item.Id">
                        <td>@item.Employee</td>
                        <td>@String.Format(CultureInfo.InvariantCulture, "{0:0.00}", item.Quantity)</td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
