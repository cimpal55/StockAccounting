@model InventoryDataViewModel
@{
    ViewData["Title"] = "InventoryData";
}

<div class="container">
    <div class="row pb-3">
        <div class="col"></div>
        <div class="col nav justify-content-end">
            <div class="input-group">
                <input type="text" name="searchInventoryData" id="searchInventoryDataId" value="@Model.SearchText" class="form-control" placeholder="Search...">
                <button type="button" class="btn bg-transparent" style="margin-left: -40px; z-index: 100;" id="btnInventoryDataClearSearch">
                    <i class="fa fa-times"></i>
                </button>
                <a id="btnSearchInventoryData" class="btn btn-primary search-link" asp-controller="InventoryData" asp-action="List" asp-route-id="1" asp-route-searchText="dummyText">Search</a>
                <button type="button" id="newInventoryDataButton" class="btn btn-success btn-margin-left" data-toggle="modal" data-target="#newInventoryDataModal">Add Inventory Doc</button>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="alert-container-fixed">
            <alerts></alerts>
        </div>
    </div>
    <div class="fixed-table-container" id="divTable" style="display: none;">
        <table class="table table-striped" id="inventoryTable">
            <thead>
            <tr>
                <th>Nodeva</th>
                <th>Pieņēma</th>
                <th>Izveidots</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @{
                System.Diagnostics.Debug.Assert(Model != null, nameof(Model) + " != null");
                System.Diagnostics.Debug.Assert(Model.InventoryDataModel != null, "Model.InventoryDataModel != null");
                TimeZoneInfo tzi = TimeZoneInfo.FindSystemTimeZoneById("Central European Standard Time"); 
            }

            @foreach (var item in Model.InventoryDataModel)
            {
                <tr id="data_@item.Id">
                    <td>@item.Employee1</td>
                    <td>@item.Employee2</td>
                    <td>@TimeZoneInfo.ConvertTimeToUtc(item.Created, tzi)</td>
                    <td align="right">
                        <a class="btn btn-outline-primary" 
                           role="button" 
                           aria-pressed="true" 
                           asp-controller="ScannedData" 
                           asp-action="Details" 
                           asp-route-id="@item.Id">Details</a>
                        <button type="button"
                                class="btn btn-warning"
                                data-toggle="modal"
                                data-target="#editInventoryDataModal"
                                data-id="@item.Id"
                                data-employee1id="@item.Employee1Id"
                                data-employee2id="@item.Employee2Id">Edit</button>
                        <button type="button"
                                class="btn btn-danger"
                                data-toggle="modal"
                                data-target="#deleteInventoryDataModal"
                                data-id="@item.Id">Delete</button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="row justify-content-end pr-3">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (Model.EndPage > 9)
                {
                    <li class="page-item"><a class="page-link search-link" asp-controller="InventoryData" asp-action="List" asp-route-pageId="1">1</a></li>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                }
                @for (var i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    var activePage = (Model.PageIndex == i) ? "active" : ""; 
                    <li class="page-item @activePage"><a class="page-link search-link" asp-controller="InventoryData" asp-action="List" asp-route-pageId="@i">@i</a></li>

                }
                @if (Model.EndPage >= 9 && Model.EndPage < Model.TotalPages)
                {
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                    <li class="page-item"><a class="page-link search-link" asp-controller="InventoryData" asp-action="List" asp-route-pageId="@Model.TotalPages">@Model.TotalPages</a></li>
                }
            </ul>
        </nav>
    </div>
</div>

<partial name="AddInventoryData" />
<partial name="UpdateInventoryData" />
<partial name="DeleteInventoryData" />
<partial name="..\Shared/Warning" />

@section Scripts{
    <script src="~/js/inventoryData.js" asp-append-version="true"></script>
}