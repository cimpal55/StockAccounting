@model ScannedDataViewModel

<div id="scannedDataModal" class="modal-body">
    <form asp-action="InsertScannedData" asp-controller="ScannedData" data-ajax-method="POST" data-ajax="true" data-ajax-complete="scannedDataModalComplete">
        <div id="newScannedDataModal" class="modal fade" tabindex="-1" role="dialog" data-backdrop="static">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add new scanned data</h5>
                    </div>
                    <div class="modal-body" id="scannedDataModalDetails">
                        <div class="form-group">
                            <input type="hidden" asp-for="InventoryDataId" value="@Model.InventoryDataId" />
                            <label class="control-label"><b>Stock</b></label>
                            <select id="selectExternalData" asp-for="ExternalDataId" class="form-control" style="width: 100%;">
                                <option value="0" selected="selected">-Choose-</option>
@*                                 @if (Model is { ExternalData: { } })
                                {
                                    @foreach (var item in Model.ExternalData.Where(x => x.Name.Contains("None") != true))
                                    {
                                        <option value="@item.Id">@item.Name @item.ItemNumber @item.PluCode</option>
                                    }
                                } *@
                            </select>
                            <span asp-validation-for="ExternalDataId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label"><b>Quantity</b></label>
                            <input asp-for="Quantity" class="form-control" type="number" name="Quantity" value="1" required/>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input id="btnSubmit" type="submit" value="Submit" class="btn btn-primary" />
                        <button id="scannedDataModalClose" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/js/scannedData.js" asp-append-version="true"></script>
}
