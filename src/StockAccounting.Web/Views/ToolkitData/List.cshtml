@model ToolkitViewModel
@{
    ViewData["Title"] = "ToolkitData";
}

<div class="container">
    <div class="row pb-3">
        <div class="col"></div>
        <div class="col nav justify-content-end">
            <div class="input-group">
                <input type="text" name="searchToolkitData" id="searchToolkitDataId" value="@Model.SearchText" class="form-control" placeholder="Search...">
                <button type="button" class="btn bg-transparent" style="margin-left: -40px; z-index: 100;" id="btnToolkitDataClearSearch">
                    <i class="fa fa-times"></i>
                </button>
                <a id="btnSearchToolkitData" class="btn btn-primary search-link" asp-controller="ToolkitData" asp-action="List" asp-route-id="1" asp-route-searchText="dummyText">Search</a>
                <button type="button" id="newToolkitDataButton" class="btn btn-success btn-margin-left" data-toggle="modal" data-target="#newToolkitDataModal">Add Toolkit</button>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="alert-container-fixed">
            <alerts></alerts>
        </div>
    </div>
    <div class="fixed-table-container" id="divTable" style="display: none;">
        <table class="table" id="toolkitTable">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Total Quantity</th>
                <th>Created</th>
                <th>Updated</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @{
                System.Diagnostics.Debug.Assert(Model != null, nameof(Model) + " != null");
                System.Diagnostics.Debug.Assert(Model.ToolkitDataModel != null, "Model.ToolkitDataModel != null");
                TimeZoneInfo tzi = TimeZoneInfo.FindSystemTimeZoneById("Central European Standard Time"); 
            }

            @foreach (var item in Model.ToolkitDataModel)
            {
                <tr id="data_@item.Id">
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.TotalQuantity</td>
                    <td data-order="@item.Created.ToString("MMddyyyyHHmm")">@item.Created.ToString("dd.MM.yyyy HH:mm")</td>
                    <td data-order="@item.Created.ToString("MMddyyyyHHmm")">@item.Updated.ToString("dd.MM.yyyy HH:mm")</td>
                    <td align="right">
                        <button type="button"
                                class="btn btn-warning"
                                data-toggle="modal"
                                data-target="#editToolkitDataModal"
                                data-id="@item.Id"
                                data-externalList="@Model.ToolkitExternalDataModel">Edit</button>
                        <button type="button"
                                class="btn btn-danger"
                                data-toggle="modal"
                                data-target="#deleteToolkitDataModal"
                                data-id="@item.Id"
                                data-externalList="@Model.ToolkitExternalDataModel">Delete</button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="row justify-content-end pr-3">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (Model.EndPage > 9)
                {
                    <li class="page-item"><a class="page-link search-link" asp-controller="ToolkitData" asp-action="List" asp-route-pageId="1">1</a></li>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                }
                @for (var i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    var activePage = (Model.PageIndex == i) ? "active" : ""; 
                    <li class="page-item @activePage"><a class="page-link search-link" asp-controller="ToolkitData" asp-action="List" asp-route-pageId="@i">@i</a></li>

                }
                @if (Model.EndPage >= 9 && Model.EndPage < Model.TotalPages)
                {
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                    <li class="page-item"><a class="page-link search-link" asp-controller="ToolkitData" asp-action="List" asp-route-pageId="@Model.TotalPages">@Model.TotalPages</a></li>
                }
            </ul>
        </nav>
    </div>
</div>

<partial name="AddToolkitData" />


@section Scripts {
    <script src="~/js/toolkitData.js" asp-append-version="true"></script>
}