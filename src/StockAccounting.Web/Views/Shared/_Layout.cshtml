    <!-- Template Main CSS File -->
    <link href="~/Admin/assets/css/style.css" rel="stylesheet">

</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center pe-4">

        <div class="d-flex align-items-center justify-content-between">
            <a asp-controller="ExternalData" asp-action="List" class="logo d-flex align-items-center">
                <img src="~/Admin/assets/img/folder.png" alt="Admin Panel">
                <span class="d-none d-lg-block">StockAccounting</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>

        </div><!-- End Logo -->

        <nav class="header-nav ms-auto btn btn-dark">
            <ul class="d-flex align-items-center">
                <li class ="nav-item dropdown">
                    <a class="admin-button nav-link dropdown-toggle pe-0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="Administration">Administration</a>
                    <div class="dropdown-menu" aria-labelledby="Administration">
                        <a class="dropdown-item btn btn-outline-dark" asp-controller="ToolkitData" asp-action="List">Toolkits</a>
                    </div>
                </li>
            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="ExternalData" asp-action="List">
                    <i class="bi bi-grid"></i>
                    <span>Details</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="InventoryData" asp-action="List">
                    <i class="bi bi-building-fill"></i>
                    <span>Documents</span>
                </a>
            </li><!-- End About Section -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="EmployeeData" asp-action="List">
                    <i class="bi bi-house"></i>
                    <span>Employees</span>
                </a>
            </li><!-- End Hone Page Section -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="StockData" asp-action="List">
                    <i class="bi bi-sliders2-vertical"></i>
                    <span>Stocks</span>
                </a>
            </li><!-- End Hone Page Section -->

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Dashboard">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li><!-- End Dashboard Nav -->
        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">

        @RenderBody()

    </main><!-- End #main -->


    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
