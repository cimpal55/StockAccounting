@using System.Globalization;
@model ExternalDataViewModel
@{
    ViewData["Title"] = "Products";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-md-auto">
            <form class="form-inline" method="post" enctype="multipart/form-data" asp-controller="ExternalData" asp-action="UploadNetsuiteDataFile">
                <div class="form-group mb-3">
                    <input type="file" name ="file" id="uploadCsvFile" accept=".csv"/>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" class="btn btn-primary" value="UploadCsv"/>
                </div>
            </form>
        </div>
        <div class="col">
        </div>
        <div class="col">
            <div class="input-group">
                <input type="text" name="searchExternalData" id="searchExternalDataId" value="@Model.SearchText" class="form-control" placeholder="Search...">
                <button type="button" class="btn bg-transparent" style="margin-left: -40px; z-index: 100;" id="btnClearSearch">
                    <i class="fa fa-times"></i>
                </button>
                <a id="btnSearchExternalData" class="btn btn-primary search-link" asp-controller="ExternalData" asp-action="List" asp-route-id="1" asp-route-searchText="dummyText">Search</a>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="alert-container-fixed">
            <alerts></alerts>
        </div>
    </div>
    <div class="fixed-table-container" id="divTable" style="display: none;">
        <table class="table table-striped" id="externalTable">
            <thead>
            <tr>
                <th>Name</th>
                <th>ItemNumber</th>
                <th>PluCode</th>
                <th>Barcode</th>
            </tr>
            </thead>
            <tbody>
            @{
                System.Diagnostics.Debug.Assert(Model != null, nameof(Model) + " != null");
                System.Diagnostics.Debug.Assert(Model.ExternalDataModel != null, "Model.ExternalDataModel != null");
            }

            @foreach (var item in Model.ExternalDataModel)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ItemNumber</td>
                    <td>@item.PluCode</td>
                    <td>@item.Barcode</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="row justify-content-end pr-3">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (Model.EndPage > 9)
                {
                    <li class="page-item"><a class="page-link search-link" asp-controller="ExternalData" asp-action="List" asp-route-id="1" asp-route-searchText="dummyText">1</a></li>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                }
                @for (var i = Model.StartPage; i <= Model.EndPage; i++)
                {
                    var activePage = (Model.PageIndex == i) ? "active" : ""; 
                    <li class="page-item @activePage"><a class="page-link search-link" asp-controller="ExternalData" asp-action="List" asp-route-id="@i" asp-route-searchText="dummyText">@i</a></li>

                }
                @if (Model.EndPage >= 9 && Model.EndPage < Model.TotalPages)
                {
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                    <li class="page-item"><a class="page-link search-link" asp-controller="ExternalData" asp-action="List" asp-route-id="@Model.TotalPages" asp-route-searchText="dummyText">@Model.TotalPages</a></li>
                }
            </ul>
        </nav>
    </div>
</div>

@section Scripts{
    <script src="~/js/externalData.js" asp-append-version="true"></script>
}
