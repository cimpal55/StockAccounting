<Shell
    x:Class="StockAccounting.Inventory.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:StockAccounting.Inventory.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="StockAccounting.Inventory">

    <ShellContent
        Title="Main"
        ContentTemplate="{DataTemplate views:MainView}"
        Route="MainView" />

    <ShellContent
        Title="Employees"
        ContentTemplate="{DataTemplate views:EmployeeView}"
        Route="EmployeeView" />

    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:InventoryDataView}"
        Route="InventoryView" />

    <ShellContent
        Title="Scanned"
        ContentTemplate="{DataTemplate views:ScannedInventoryDataView}"
        Route="ScannedView" />

    <ShellContent
        Title="ScannedAdd"
        ContentTemplate="{DataTemplate views:ScannedInventoryDataAddView}"
        Route="ScannedAddView" />

</Shell>
